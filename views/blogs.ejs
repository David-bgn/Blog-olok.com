<%- include("partials/header.ejs") %>
<div class="edit">
  <div class="edit-title">
    <h1 class="edit-content-title"><%= blog.title %></h1>
  </div>
  <div class="edit-content">
    <p class="edit-content-content"><%= blog.content %></p>
  </div>
  <div class="edit-buttons">
    <form action="/blogs/<%= blog.id %>/edit" method="GET">
      <input class="edit-btn" type="submit" name="edit" value="Edit" />
    </form>

    <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST">
      <input class="delete-btn" type="submit" name="delete" value="Delete" />
    </form>
  </div>
</div>

